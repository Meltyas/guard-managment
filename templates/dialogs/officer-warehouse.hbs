<div class='officer-warehouse-dialog'>
  <div class='warehouse-header'>
    <h2>
      <i class='fas fa-user-shield'></i>
      Almacén de Oficiales
    </h2>
    {{#if isGM}}
    <button type='button' class='add-officer-btn'>
      <i class='fas fa-plus'></i>
      Nuevo Oficial
    </button>
    {{else}}
    <p style='margin: 0; color: #999; font-size: 0.9rem;'>(Solo lectura)</p>
    {{/if}}
  </div>

  <div class='officers-list'>
    {{#each officers}}
      <div class='officer-card' data-officer-id='{{this.id}}' draggable='true'>
        <div class='officer-avatar'>
          <img src='{{this.actorImg}}' alt='{{this.actorName}}' />
        </div>
        <div class='officer-info'>
          <div class='officer-name'>{{this.actorName}}</div>
          <div class='officer-title'>{{this.title}}</div>
          <div class='officer-traits-summary'>
            <span class='pros-count'>
              <i class='fas fa-thumbs-up'></i>
              {{this.pros.length}}
              Pros
            </span>
            <span class='cons-count'>
              <i class='fas fa-thumbs-down'></i>
              {{this.cons.length}}
              Cons
            </span>
          </div>
        </div>
        <div class='officer-actions'>
          <button
            type='button'
            class='view-officer-btn'
            title='Ver detalles'
            data-officer-id='{{this.id}}'
          >
            <i class='fas fa-eye'></i>
          </button>
          {{#if ../isGM}}
          <button
            type='button'
            class='edit-officer-btn'
            title='Editar'
            data-officer-id='{{this.id}}'
          >
            <i class='fas fa-edit'></i>
          </button>
          <button
            type='button'
            class='delete-officer-btn'
            title='Eliminar'
            data-officer-id='{{this.id}}'
          >
            <i class='fas fa-trash'></i>
          </button>
          {{/if}}
        </div>
      </div>
    {{else}}
      <p class='empty-state'>No hay oficiales creados aún</p>
    {{/each}}
  </div>
</div>